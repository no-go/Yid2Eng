<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.digisocken.yid2eng">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="de.digisocken.yid2eng.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="de.digisocken.yid2eng.EditActivity" android:windowSoftInputMode="adjustResize|stateHidden"
            android:parentActivityName="de.digisocken.yid2eng.MainActivity"
            android:label="@string/app_name" >
        </activity>

    </application>

</manifest>